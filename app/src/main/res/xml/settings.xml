<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:key="etc"
        app:title="색상 설정" >

        <ListPreference
            app:key="actionbar_color"
            app:title="액션바 색상 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />

        <ListPreference
            app:key="bg_color"
            app:title="배경색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />

        <ListPreference
            app:key="tx_color"
            app:title="글자색 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />



        <ListPreference
            app:key="button_color"
            app:title="버튼 색상 선택"
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values" />


    </PreferenceCategory>


</PreferenceScreen>